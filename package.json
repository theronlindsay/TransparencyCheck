{
	"name": "transparencycheck-monorepo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:client": "npm run dev --workspace=apps/client",
		"dev:server": "npm run dev --workspace=apps/server",
		"build:client": "npm run build --workspace=apps/client",
		"build:server": "npm run build --workspace=apps/server",
		"build": "npm run build:client && npm run build:server",
		"install:all": "npm install && npm install --workspaces",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"docker:build": "podman-compose build",
		"docker:up": "podman-compose up -d",
		"docker:down": "podman-compose down",
		"docker:logs": "podman-compose logs -f",
		"docker:restart": "podman-compose restart",
		"deploy": "podman-compose up -d --build",
		"deploy:docker": "docker-compose up -d --build"
	},
	"workspaces": [
		"apps/client",
		"apps/server"
	],
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"cross-env": "^10.1.0",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3"
	}
}
