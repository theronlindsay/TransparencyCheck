{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "transparencycheck",
  "version": "0.1.0",
  "identifier": "com.transparencycheck.app",
  "build": {
    "beforeDevCommand": "STATIC_BUILD=true VITE_STATIC_BUILD=true npm run build && npm run preview",
    "beforeBuildCommand": "STATIC_BUILD=true VITE_STATIC_BUILD=true npm run build",
    "devUrl": "http://localhost:4173",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Transparency Check",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
